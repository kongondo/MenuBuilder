		return array(
			'title' => 'Menu Builder: Markup',
			'summary' => 'Render menus created by Process Menu Builder',
			'author' => 'Francis Otieno (Kongondo)',
			'version' => '0.2.7',
			'href' => 'http://processwire.com/talk/topic/4451-module-menu-builder/',
